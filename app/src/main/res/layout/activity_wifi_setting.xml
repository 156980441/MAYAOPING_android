<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/wifi_logo" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配网"
        android:textSize="@dimen/text_size_16sp"
        android:layout_margin="10dp"
        android:textColor="@color/register_hint_text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:padding="5dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wifi_id" />

            <EditText
                android:id="@+id/wifi_ssid"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/input_wifi_ssid"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/register_hint_text_color"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/divider_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wifi_pwd" />

            <EditText
                android:id="@+id/wifi_pwd"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/psw_digits"
                android:ems="10"
                android:hint="@string/input_wifi_pwd"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/register_hint_text_color"
                android:textSize="@dimen/text_size_18sp" />

            <CheckBox
                android:id="@+id/cbLaws"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_margin="15dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/divider_shape" />



        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="40dp"
            android:background="@mipmap/btn_next" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>